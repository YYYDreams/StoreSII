<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:background="@drawable/header"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/fanhui"
            android:layout_width="28dp"
            android:layout_marginLeft="8dp"
            android:layout_height="match_parent"
            android:src="@drawable/left" />
        <LinearLayout
            android:id="@+id/line_seach"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/suhhhhii"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:onClick="onClick"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/seach1"
                android:paddingLeft="9dp" />

        </LinearLayout>
        <ImageView
            android:id="@+id/xiaoxi"
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="8dp"
            android:src="@drawable/xiaoxx" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tuijian"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="推荐"
                android:background="#ffffff"
                android:textSize="20dp"
                android:clickable="true"
                android:enabled="true"
                android:onClick="onClick" />
            <TextView
                android:id="@+id/mingqi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="最新"
                android:background="#ffffff"
                android:textSize="20dp"
                android:clickable="true"
                android:enabled="true"
                android:onClick="onClick" />
            <TextView
                android:id="@+id/xinjin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="销量"
                android:background="#ffffff"
                android:textSize="20dp"
                android:clickable="true"
                android:enabled="true"
                android:onClick="onClick" />
        </LinearLayout>
        <com.example.administrator.store3.customview.xlistview.XListView
            android:id="@+id/brand_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
        </com.example.administrator.store3.customview.xlistview.XListView>
    </LinearLayout>

</LinearLayout>

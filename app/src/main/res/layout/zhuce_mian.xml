<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:orientation="horizontal">
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="28dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/fanhui"
                    android:layout_marginLeft="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:background="@drawable/bj"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="vertical"
                android:background="@drawable/suhhhh"
                android:gravity="center"
                android:layout_margin="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <EditText
                        android:id="@+id/editPhone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:ems="11"
                        android:hint="手机号"
                        android:textSize="25sp"
                        android:layout_gravity="center_horizontal"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:textCursorDrawable="@null"
                        android:layout_marginLeft="5dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#1ca446"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <EditText
                        android:id="@+id/editName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textPersonName"
                        android:hint="用户名"
                        android:textSize="25sp"
                        android:ems="10"
                        android:background="@null"
                        android:textCursorDrawable="@null"
                        android:layout_marginLeft="5dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#1ca446"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <EditText
                        android:id="@+id/editPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textPassword"
                        android:textSize="25sp"
                        android:hint="密码"
                        android:layout_weight="1"
                        android:textCursorDrawable="@null"
                        android:layout_marginLeft="5dp"
                        android:background="@null" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#1ca446"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <EditText
                        android:id="@+id/editPassword1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textPassword"
                        android:textSize="25sp"
                        android:hint="确认密码"
                        android:layout_weight="1"
                        android:textCursorDrawable="@null"
                        android:layout_marginLeft="5dp"
                        android:background="@null" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#1ca446"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <EditText
                        android:id="@+id/editEail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="25sp"
                        android:hint="邮箱"
                        android:layout_weight="1"
                        android:textCursorDrawable="@null"
                        android:layout_marginLeft="5dp"
                        android:background="@null" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_margin="15dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:background="@drawable/yanzhengma"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/editYanma"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="11"
                        android:hint="手机验证码"
                        android:textSize="25sp"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:textCursorDrawable="@null"
                        android:layout_marginLeft="20dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.8"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btn1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="获取验证码"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:background="@drawable/huoquyanzhengma" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="我已详细阅读确认"
                        android:textSize="20sp" />
                     <TextView
                        android:id="@+id/t_View0"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="《用户协议》"
                        android:textSize="20sp"
                        android:gravity="left|center"
                        android:textColor="#1ca446" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/zhucebiankuan"
                android:layout_margin="10dp">
                <Button
                    android:id="@+id/btnZhuce"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="注册"
                    android:textSize="30sp"
                    android:textColor="#ffff"
                    android:background="@drawable/zhucebiankuan" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

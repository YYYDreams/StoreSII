<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/botter_line">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/image0"
                android:layout_width="28dp"
                android:layout_height="match_parent"
                android:src="@drawable/fanhui"
                android:layout_marginLeft="8dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/t_View0"
                android:layout_width="wrap_content"
                android:text="全部订单"
                android:gravity="center"
                android:textSize="25sp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/image1"
                android:layout_width="50dp"
                android:src="@drawable/quanbudingdan2"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_marginLeft="20dp" />
            <ImageView
                android:id="@+id/image2"
                android:layout_width="50dp"
                android:src="@drawable/mr_message"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_marginLeft="5dp" />
        </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/dfk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="2dp"
            android:clickable="true"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:id="@+id/dfk_img"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:src="@drawable/daifukuan2"
                    android:padding="1dp" />
                <TextView
                    android:id="@+id/dfk_tv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/biankuang5"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="#45B468" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="待付款"
                android:gravity="center_horizontal" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/dfh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="2dp"
            android:clickable="true"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:id="@+id/dfh_img"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:src="@drawable/daifahuo2"
                    android:padding="4dp" />
                <TextView
                    android:id="@+id/dfh_tv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/biankuang5"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="#45B468" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="待发货"
                android:gravity="center_horizontal" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/dsh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="2dp"
            android:clickable="true"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:id="@+id/dsh_img"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:src="@drawable/paijian2"
                    android:padding="1dp" />
                <TextView
                    android:id="@+id/dsh_tv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/biankuang5"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="#45B468" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="待收货"
                android:gravity="center_horizontal" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/dpj"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="2dp"
            android:clickable="true"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:id="@+id/dpj_img"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:src="@drawable/daipingjia2"
                    android:padding="1dp" />
                <TextView
                    android:id="@+id/dpj_tv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/biankuang5"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="#45B468" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="待评价"
                android:gravity="center_horizontal" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/dtk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="2dp"
            android:clickable="true"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:id="@+id/dtk_img"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:src="@drawable/daituikuan2"
                    android:padding="1dp" />
                <TextView
                    android:id="@+id/dtk_tv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/biankuang5"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="#45B468" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="退款/售后"
                android:gravity="center_horizontal" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EFF5F5" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">
            <ListView
                android:id="@+id/list_qndd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:listSelector="@android:color/transparent">
            </ListView>
    </LinearLayout>
</LinearLayout>

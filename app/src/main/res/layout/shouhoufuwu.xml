<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:padding="5dp">
    <LinearLayout
        android:id="@+id/ll_after"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:background="#EFF5F5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="#FFFFFF">

                <ImageView
                    android:id="@+id/image0"
                    android:layout_width="28dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/fanhui"
                    android:layout_marginLeft="8dp"/>

            <LinearLayout
                android:id="@+id/line_seach"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/name"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="申请售后服务"
                    android:textSize="20sp"
                    android:gravity="center" />
            </LinearLayout>

                <ImageView
                    android:layout_width="28dp"
                    android:layout_marginRight="8dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/mr_message"
                   />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="vertical">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="120dp"
                      android:orientation="horizontal"
                      android:layout_marginTop="8dp"
                      android:background="@color/white"
                      android:paddingBottom="15dp"
                      android:paddingLeft="8dp"
                      android:paddingTop="8dp"
                      android:paddingRight="8dp">
                      <LinearLayout
                          android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:layout_weight="1.1">
                          <ImageView
                              android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:src="@drawable/s_sp_02" />
                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:layout_weight="3"
                          android:orientation="vertical">
                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="0dp"
                              android:layout_weight="1.2"
                              android:text="龙的LD-K1015玻璃电水壶304食品级不锈钢肖特玻璃烧水壶煮开水壶"
                              android:padding="5dp"
                              android:layout_marginLeft="8dp"
                              android:ellipsize="end"
                              android:maxLines="2"
                              android:textSize="16sp"
                              android:lineSpacingExtra="3dp"
                              android:lineSpacingMultiplier="1.1"
                              android:textStyle="bold" />
                          <LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="0dp"
                              android:layout_weight="1"
                              android:orientation="horizontal"
                              android:gravity="center_vertical">
                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="¥188.00"
                                  android:layout_marginLeft="15dp" />
                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="数量:1"
                                  android:layout_marginLeft="8dp" />
                              <RelativeLayout
                                  android:layout_width="0dp"
                                  android:layout_height="match_parent"
                                  android:layout_weight="1"
                                  android:gravity="center|right">
                                  <LinearLayout
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:orientation="horizontal"
                                      android:background="@drawable/biankuang2"
                                      android:paddingLeft="8dp"
                                      android:paddingRight="15dp">
                                      <ImageView
                                          android:layout_width="30dp"
                                          android:layout_height="30dp"
                                          android:padding="6dp"
                                          android:layout_gravity="center_vertical"
                                          android:src="@drawable/xiaolian" />
                                      <TextView
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:text="联系卖家"
                                          android:textSize="12sp"
                                          android:layout_marginLeft="10dp"
                                          android:textColor="@color/bobo"
                                          android:layout_gravity="center_vertical" />
                                  </LinearLayout>
                              </RelativeLayout>
                          </LinearLayout>
                      </LinearLayout>
                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="90dp"
                      android:orientation="vertical"
                      android:background="#FFFFFF"
                      android:layout_marginTop="8dp">
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="0dp"
                          android:layout_weight="1">
                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:text="服务类型"
                              android:textSize="18sp"
                              android:gravity="center_vertical"
                              android:paddingLeft="10dp" />
                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="0dp"
                          android:layout_weight="1"
                          android:orientation="horizontal">
                          <LinearLayout
                              android:layout_width="0dp"
                              android:layout_weight="1"
                              android:layout_height="match_parent">
                              <TextView
                                  android:id="@+id/tuihuo"
                                  android:layout_width="100dp"
                                  android:layout_height="30dp"
                                  android:text="退货"
                                  android:textSize="15sp"
                                  android:gravity="center"
                                  android:layout_marginLeft="10dp"
                                  android:background="@drawable/biankuang_1"
                                  android:onClick="onClick"
                                  android:clickable="true" />
                          </LinearLayout>
                          <LinearLayout
                              android:layout_width="0dp"
                              android:layout_weight="1"
                              android:layout_height="match_parent">
                              <TextView
                                  android:id="@+id/huanhuo"
                                  android:layout_width="100dp"
                                  android:layout_height="30dp"
                                  android:text="换货"
                                  android:layout_marginLeft="10dp"
                                  android:textSize="15sp"
                                  android:gravity="center"
                                  android:background="@drawable/biankuang"
                                  android:onClick="onClick"
                                  android:clickable="true" />
                          </LinearLayout>
                          <LinearLayout
                              android:layout_width="0dp"
                              android:layout_weight="1"
                              android:layout_height="match_parent">
                              <TextView
                                  android:id="@+id/weixiu"
                                  android:layout_width="100dp"
                                  android:layout_height="30dp"
                                  android:text="维修"
                                  android:layout_marginLeft="10dp"
                                  android:textSize="15sp"
                                  android:gravity="center"
                                  android:background="@drawable/biankuang"
                                  android:onClick="onClick"
                                  android:clickable="true" />
                          </LinearLayout>
                      </LinearLayout>
                  </LinearLayout>
                  <FrameLayout
                      android:id="@+id/converview"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">
                  </FrameLayout>
              </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:touchscreenBlocksFocus="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
                <ImageView
                    android:id="@+id/image0"
                    android:layout_width="28dp"
                    android:layout_marginLeft="8dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/fanhui"
                    android:onClick="onClick" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="商品详情"
                    android:textSize="25sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="vertical">
          <ScrollView
              android:layout_width="match_parent"
              android:layout_height="match_parent">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="400dp"
                      android:layout_weight="1"
                      android:background="@drawable/suhhhh"
                      android:orientation="vertical"
                      android:layout_margin="10dp">
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="0dp"
                          android:layout_weight="1"
                          android:orientation="horizontal">
                          <LinearLayout
                              android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_weight="1"
                              android:orientation="horizontal">
                              <ImageView
                                  android:layout_width="0dp"
                                  android:layout_weight="0.5"
                                  android:layout_height="match_parent"
                                  android:src="@drawable/logo"
                                  android:layout_gravity="center|right"
                                  android:padding="5dp"
                                  android:layout_marginLeft="8dp" />
                              <TextView
                                  android:layout_width="0dp"
                                  android:layout_height="match_parent"
                                  android:layout_weight="2"
                                  android:text="周大福旗舰店"
                                  android:textSize="18sp"
                                  android:gravity="center|left" />
                          </LinearLayout>
                          <LinearLayout
                              android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_weight="0.5"
                              android:background="@drawable/lvsebiankuang"
                              android:layout_margin="8dp">
                              <TextView
                                  android:id="@+id/t_View0"
                                  android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:text="进入店铺"
                                  android:textSize="20sp"
                                  android:gravity="center"
                                  android:onClick="onClick" />
                          </LinearLayout>
                      </LinearLayout>
                      <FrameLayout
                          android:layout_width="fill_parent"
                          android:layout_height="200dp" >

                          <android.support.v4.view.ViewPager
                              android:id="@+id/vp"
                              android:layout_width="fill_parent"
                              android:layout_height="fill_parent" />
                              <LinearLayout
                                  android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:gravity="center|bottom">
                                  <View
                                      android:id="@+id/v_dot0"
                                      style="@style/dot_style"
                                      android:background="@drawable/dot_focused" />
                                  <View
                                      android:id="@+id/v_dot1"
                                      style="@style/dot_style" />
                                  <View
                                      android:id="@+id/v_dot2"
                                      style="@style/dot_style" />
                                  <View
                                      android:id="@+id/v_dot3"
                                      style="@style/dot_style" />
                                  <View
                                      android:id="@+id/v_dot4"
                                      style="@style/dot_style" />
                              </LinearLayout>
                      </FrameLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="0dp"
                          android:layout_weight="1"
                          android:orientation="horizontal">
                          <TextView
                              android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_weight="1.5"
                              android:text="碧玉尊天然和田玉手镯"
                              android:textSize="18sp"
                              android:gravity="center" />
                          <TextView
                              android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_weight="1"
                              android:text="￥2000"
                              android:gravity="center|right"
                              android:layout_marginRight="20dp"
                              android:textSize="25sp" />
                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="0dp"
                          android:layout_weight="0.1">
                          <View
                              android:layout_width="match_parent"
                              android:layout_height="1dp"
                              android:background="#E9E9E9"
                              android:layout_marginRight="5dp"
                              android:layout_marginLeft="5dp" />
                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="0dp"
                          android:layout_weight="1"
                          android:orientation="horizontal">
                          <LinearLayout
                              android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_weight="1"
                              android:gravity="center">
                              <ImageView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:src="@drawable/dianzan"
                                  android:padding="15dp"
                                  android:layout_gravity="right" />
                          </LinearLayout>
                          <LinearLayout
                              android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_weight="1"
                              android:gravity="center">
                              <com.example.administrator.store3.customview.CircleImageView
                                  android:id="@+id/image_details"
                                  android:layout_width="40dp"
                                  android:layout_height="40dp"
                                  android:src="@drawable/music"
                                  android:padding="18dp"
                                  android:layout_gravity="center" />
                          </LinearLayout>
                          <LinearLayout
                              android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_weight="1"
                              android:gravity="center">
                              <ImageView
                                  android:id="@+id/image_pingjia"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:src="@drawable/xiaoxi1"
                                  android:padding="15dp"
                                  android:layout_gravity="left" />
                          </LinearLayout>
                      </LinearLayout>
                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="1"
                      android:orientation="horizontal">
                     <android.support.design.widget.TabLayout
                          android:id="@+id/tab_title1"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:background="#FFFFFF"
                          app:tabIndicatorColor="#000000"
                          app:tabSelectedTextColor="#000000"
                          app:tabTextColor="#ABABAB" />
                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="1">
                      <android.support.v4.view.ViewPager
                          android:id="@+id/viewPager1"
                          android:layout_width="match_parent"
                          android:layout_height="400dp"
                          android:layout_above="@+id/radioGroup"
                          ></android.support.v4.view.ViewPager>
                  </LinearLayout>
              </LinearLayout>
          </ScrollView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/t_View2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="#FE9402"
                android:text="加入购物车"
                android:textColor="#FDD6D6"
                android:textSize="25sp"
                android:gravity="center"
                android:onClick="onClick"
                android:clickable="true" />
            <TextView
                android:id="@+id/t_View3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#F23030"
                android:layout_height="match_parent"
                android:text="立即购买"
                android:textColor="#FDD6D6"
                android:textSize="25sp"
                android:gravity="center"
                android:onClick="onClick"
                android:clickable="true" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

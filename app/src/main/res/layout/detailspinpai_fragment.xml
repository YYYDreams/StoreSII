                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#525252"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"

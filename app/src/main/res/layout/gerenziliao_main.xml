<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:orientation="horizontal">
                <ImageView
                    android:id="@+id/image0"
                    android:layout_width="28dp"
                    android:layout_marginLeft="8dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/fanhui" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#605e5e"
                    android:text="个人资料"
                    android:textSize="28sp"
                    android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C4C4C4" /></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="horizontal">
                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:textSize="25sp"
                        android:textColor="#646262"
                        android:text="头像"
                        android:gravity="center|left"
                        android:layout_marginLeft="10dp" />
                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:src="@drawable/touxiang" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#C4C4C4" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                 <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:text="用户名"
                     android:textColor="#646262"
                        android:textSize="25sp"
                        android:gravity="center|left"
                        android:layout_marginLeft="10dp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="欧总"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:background="@null"
                        android:cursorVisible="false" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#C4C4C4" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:text="昵称"
                        android:textColor="#646262"
                        android:textSize="25sp"
                        android:gravity="center|left"
                        android:layout_marginLeft="10dp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="欧总"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:cursorVisible="false"
                        android:background="@null"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#C4C4C4" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                 <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:text="性别"
                     android:textColor="#646262"
                        android:textSize="25sp"
                        android:gravity="center|left"
                        android:layout_marginLeft="10dp" />
                <TextView
                        android:id="@+id/text_set"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:text="男"
                        android:textSize="25sp"
                        android:gravity="center" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#C4C4C4" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:text="出生日期"
                        android:textColor="#646262"
                        android:textSize="25sp"
                        android:gravity="center|left"
                        android:layout_marginLeft="10dp" />
                  <TextView
                       android:id="@+id/textView_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:lines="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#C4C4C4" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:text="个性签名"
                        android:textColor="#646262"
                        android:textSize="25sp"
                        android:gravity="center|left"
                        android:layout_marginLeft="10dp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="你是我的"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:cursorVisible="true"
                        android:background="@null"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#C4C4C4" /></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:text="修改密码"
                        android:textColor="#646262"
                        android:textSize="25sp"
                        android:gravity="center|left"
                        android:layout_marginLeft="10dp" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="match_parent">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/line_password"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/right"
                        android:layout_margin="10dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C4C4C4" /></LinearLayout>
        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#efeeee"></RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#EFEEEE"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/btn0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="100dp"
                    android:text="确定"
                    android:gravity="center"
                    android:background="#009A44"
                    android:textSize="25sp"
                    android:textColor="#ffff" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5">
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

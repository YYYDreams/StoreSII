<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@drawable/bjt">
    <LinearLayout
        android:background="@drawable/jbbj_shape"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:orientation="horizontal">
            <ImageView
                android:id="@+id/iV0"
                android:layout_width="28dp"
                android:layout_marginLeft="8dp"
                android:layout_height="match_parent"
                android:src="@drawable/denglu"
                android:onClick="onClick"/>
        <LinearLayout
            android:id="@+id/line_seach"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/name"
            android:layout_height="match_parent"
            android:onClick="onClick"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/name"
                android:layout_margin="9dp"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/image6"
            android:layout_width="28dp"
            android:layout_marginRight="8dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:src="@drawable/xiaoxx"
            android:onClick="onClick"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
    </LinearLayout>
    <com.example.administrator.store3.customview.CircleMenuLayout
        android:id="@+id/id_menulayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/circle_bg3" >

    </com.example.administrator.store3.customview.CircleMenuLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
    </LinearLayout>
</LinearLayout>

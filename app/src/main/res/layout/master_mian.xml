<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:background="@drawable/header"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <ImageView
            android:id="@+id/fanhui"
            android:layout_width="28dp"
            android:layout_marginLeft="8dp"
            android:layout_height="match_parent"
            android:src="@drawable/left" />
        <LinearLayout
            android:id="@+id/line_seach"
            android:layout_width="0dp"
            android:background="@drawable/suhhhhii"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="onClick">
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/seach1"
                android:paddingLeft="9dp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/xiaoxi"
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:src="@drawable/xiaoxx"
            android:layout_marginRight="8dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tuijian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="推荐"
            android:background="#ffffff"
            android:textSize="20dp"
            android:clickable="true"
            android:enabled="true"
            android:onClick="onClick" />
        <TextView
            android:id="@+id/mingqi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="名气"
            android:background="#ffffff"
            android:textSize="20dp"
            android:clickable="true"
            android:enabled="true"
            android:onClick="onClick" />
        <TextView
            android:id="@+id/xinjin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="新进"
            android:background="#ffffff"
            android:textSize="20dp"
            android:clickable="true"
            android:enabled="true"
            android:onClick="onClick" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="vertical"
        android:background="#EAEAEF">
              <com.example.administrator.store3.libs.PullToRefreshGridView
                  android:id="@+id/pull_refresh_grid"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:columnWidth="100dp"
                  android:gravity="center_horizontal"
                  android:horizontalSpacing="5dp"
                  android:numColumns="2"
                  android:stretchMode="columnWidth"
                  android:verticalSpacing="5dp" />
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2"
    android:orientation="vertical"
    android:background="#F3F4F8">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:orientation="horizontal"
            android:background="#FFFFFF">
            <ImageView
                android:id="@+id/image0"
                android:layout_width="28dp"
               android:layout_marginLeft="8dp"
                android:layout_height="match_parent"
                android:src="@drawable/fanhui" />
            <LinearLayout
                android:id="@+id/line_seach"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/name"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/t_View0"
                android:layout_width="match_parent"
                android:text="商品返回方式选择"
                android:gravity="center"
                android:textSize="25sp"
                android:layout_height="match_parent" />
            </LinearLayout>
            <ImageView
                android:id="@+id/image2"
                android:layout_width="28dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/mr_message"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F3F4F8" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#FFFFFF">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="商品返回方式"
                    android:gravity="left|center"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="快递至第三方卖家"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="@drawable/biankuang"
                    android:layout_marginLeft="10dp" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"></LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="商品返回地址将在服务器审核通过后以短信形式告知，或者看返回修改/退货记录中查询，京东不收取任何费用。"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:text="联系人："
                    android:layout_marginLeft="10dp"
                    android:gravity="center" />
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="    欧总"
                    android:background="@drawable/yuanjiaobiankuang"
                    android:layout_marginRight="25dp"
                    android:cursorVisible="false" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:text="联系电话："
                    android:layout_marginLeft="10dp"
                    android:gravity="center" />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:hint="   10086"
                    android:ems="10"
                    android:id="@+id/editText"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/yuanjiaobiankuang"
                    android:layout_marginRight="25dp"
                    android:cursorVisible="false" />
            </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
            </LinearLayout>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:text="提交"
                android:background="#FE6E31"
                android:gravity="center"
                android:layout_marginTop="25dp" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="请选择取消订单的理由"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#FF1CA446"
            />
        <com.example.administrator.store3.customview.CustomLine
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#FF1CA446"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="254dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:text="我不想买了"
                        android:textColor="#000000"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        />
                </LinearLayout>
                <com.example.administrator.store3.customview.CustomLine
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:text="信息填写错误,重新拍"
                        android:textColor="#000000"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        />
                </LinearLayout>
                <com.example.administrator.store3.customview.CustomLine
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:text="卖家缺货"
                        android:textColor="#000000"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        />
                </LinearLayout>
                <com.example.administrator.store3.customview.CustomLine
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:text="同城见面交易"
                        android:textColor="#000000"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        />
                </LinearLayout>
                <com.example.administrator.store3.customview.CustomLine
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:text="其他原因"
                        android:textColor="#000000"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        />
                </LinearLayout>
            </LinearLayout>
            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="5"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                >
                <RadioButton
                    android:layout_width="30dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <RadioButton
                    android:layout_width="30dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <RadioButton
                    android:layout_width="30dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <RadioButton
                    android:layout_width="30dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <RadioButton
                    android:layout_width="30dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </RadioGroup>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/quxiao"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="取消"
                android:textSize="18sp"
                android:gravity="center"
                android:clickable="true"
                android:onClick="onClick"
                android:background="@drawable/botter_line3"
                />
            <TextView
                android:id="@+id/queding"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="确定"
                android:textSize="18sp"
                android:gravity="center"
                android:clickable="true"
                android:onClick="onClick"
                android:background="@drawable/botter_line2"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
